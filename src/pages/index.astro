---
type Prefecture = {
  prefCode: number;
  prefName: string;
};

// RESAS APIから都道府県データを取得する関数
async function fetchPrefectures(): Promise<Prefecture[]> {
  const response = await fetch(
    "https://opendata.resas-portal.go.jp/api/v1/prefectures",
    {
      headers: { "X-API-KEY": import.meta.env.RESAS_API_KEY as string },
    }
  );

  if (!response.ok) {
    throw new Error(
      `Failed to fetch prefectures: ${response.status} ${response.statusText}`
    );
  }

  const data = await response.json();
  return data.result;
}

const prefectures: Prefecture[] = await fetchPrefectures();
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>都道府県リスト</title>
  </head>
  <body>
    <h1>都道府県リスト</h1>
    <ul>
      {
        prefectures.map((prefecture) => (
          <li>
            <a href={`/prefectures/${prefecture.prefCode}`}>
              {prefecture.prefName}
            </a>
          </li>
        ))
      }
    </ul>
  </body>
</html>
